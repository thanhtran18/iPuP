<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="comp3350.iPuP">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".presentation.HomeActivity"
            android:label="@string/app_name"
            android:configChanges="orientation|screenSize">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.HostActivity"
            android:label="@string/title_activity_host"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.iPuP.presentation.HomeActivity" />
        </activity>
        <activity
            android:name=".presentation.AvailableParkingSpots"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity
            android:name=".presentation.HostMenuActivity"
            android:configChanges="orientation|screenSize">
        </activity>
        <activity
            android:name=".presentation.ParkingSpotInfoActivity"
            android:label="@string/title_activity_parking_spot_info"
            android:parentActivityName=".presentation.HomeActivity"
            android:theme="@style/AppTheme.NoActionBar"
            android:configChanges="orientation|screenSize">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="comp3350.iPuP.presentation.AvailableParkingSpots"/>
        </activity>
    </application>

</manifest>